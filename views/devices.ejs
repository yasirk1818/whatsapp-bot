<!DOCTYPE html>
<html>
<head>
    <title>Manage Device - <%= device.name %></title>
</head>
<body>
    <h1>Manage: <%= device.name %></h1>
    <p>Status: <strong><%= device.status %></strong></p>
    <a href="/dashboard">Back to Dashboard</a>

    <% if (device.status === 'qr') { %>
        <h2>Scan QR Code</h2>
        <div id="qrcode"></div>
        <p>Please scan this QR code with your WhatsApp.</p>
    <% } %>

    <% if (device.status === 'connected') { %>
        <h2>Device is Connected! (<%= device.number %>)</h2>

        <!-- Keywords Section -->
        <h3>Auto-Reply Keywords</h3>
        <form action="/dashboard/device/<%= device._id %>/add-keyword" method="POST">
            <input type="text" name="keyword" placeholder="Keyword (e.g., hello)" required>
            <input type="text" name="reply" placeholder="Reply message" required>
            <button type="submit">Add Keyword</button>
        </form>
        <ul>
            <% device.keywords.forEach(kw => { %>
                <li>"<%= kw.keyword %>" -> "<%= kw.reply %>"</li>
            <% }) %>
        </ul>

        <!-- Settings Section -->
        <h3>Settings</h3>
        <form action="/dashboard/device/<%= device._id %>/settings" method="POST">
            <label><input type="checkbox" name="autoRead" <%= device.settings.autoRead ? 'checked' : '' %>> Auto Read Messages</label><br>
            <label><input type="checkbox" name="alwaysOnline" <%= device.settings.alwaysOnline ? 'checked' : '' %>> Always Online Mode</label><br>
            <label><input type="checkbox" name="rejectCalls" <%= device.settings.rejectCalls ? 'checked' : '' %>> Reject Incoming Calls</label><br>
            <button type="submit">Save Settings</button>
        </form>
    <% } %>
    
    <hr>
    <form action="/dashboard/device/<%= device._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this device and its session?');">
        <button type="submit">Delete This Device</button>
    </form>

    <script>
        const qrContainer = document.getElementById('qrcode');
        if (qrContainer) {
            function fetchQr() {
                fetch(`/dashboard/device/<%= device._id %>/qr`)
                    .then(res => res.json())
                    .then(data => {
                        if (data.qrCodeDataUrl) {
                            qrContainer.innerHTML = `<img src="${data.qrCodeDataUrl}" alt="QR Code">`;
                        } else {
                             // Check again after some time
                             setTimeout(fetchQr, 5000);
                        }
                    });
            }
            fetchQr();
        }
    </script>
</body>
</html>
